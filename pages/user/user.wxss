/* pages/visit/visit.wxss */
page{
  width: 100%;
  height: 100%;
  background: #F5F5F5;
}
image{
  width: 100%;
  height: 100%;
}
.header{
  width: 100%;
  height: 242rpx;
  background: url('http://ylbb-business.oss-cn-beijing.aliyuncs.com/visit454534534.png') no-repeat;
  background-size:100% 100%; 
  padding-top: 30rpx;
  
}
.userIcon{
  width: 134rpx;
  height: 134rpx;
  margin: 56rpx 0 0 54rpx;
  float: left;
}
.userName{
  width: 510rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size:40rpx;
   color: #333;
   float: left;
   margin-top: 66rpx;
   margin-left: 40rpx;
}
.user_main{
  width: 100%;
  height: 578rpx;
  background: #fff;
  margin-top: 20rpx;
}
.userTitle{
  height: 44rpx;
  line-height: 44rpx;
  padding: 30rpx 0;
  font-size: 32rpx;
  color: #333;
  border: solid 2rpx #f5f5f5;
}
.userTitle text{
  border-left: solid 4rpx #5EA3FE;
  padding-left: 32rpx;
}
.userLists{
  width: 730rpx;
  margin: 0 auto;
  overflow: hidden;
}
.list{
  width: 204rpx;
  height: 188rpx;
  border-radius: 10rpx;
  margin: 30rpx 0 0 30rpx;
  color: #fff;
  overflow: hidden;
  background: url('http://ylbb-business.oss-cn-beijing.aliyuncs.com/icon-ylbaby15454564.png')no-repeat 110rpx 120rpx #5EA3FE;
  background-size:104rpx 78rpx; 
  float: left;
  box-shadow: -2rpx 2rpx 5rpx #5EA3FE;
}
.listTit{
  height: 30rpx;
  line-height: 30rpx;
  padding-left: 20rpx;
  margin-top: 38rpx;
  font-size: 28rpx;
  border-left: solid 4rpx #fff;
}
.listNumber{
  height: 66rpx;
  line-height: 66rpx;
  font-size: 48rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
}

.footer{
  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 12rpx;
}
.footer-phone{
   color: rgb(150, 150, 150);
  font-size: 20rpx;
  line-height: 28rpx;

}
.footer-time{
  color: rgb(150, 150, 150);
  font-size: 20rpx;
  line-height: 28rpx;
}